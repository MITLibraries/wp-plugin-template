<?xml version="1.0"?>
<ruleset name="MITlib-WordPress">
	<!-- See https://github.com/squizlabs/PHP_CodeSniffer/wiki/Annotated-ruleset.xml -->
	<!-- See https://github.com/WordPress-Coding-Standards/WordPress-Coding-Standards/blob/develop/WordPress-Core/ruleset.xml -->

	<!-- Set a description for this ruleset. -->
	<description>A custom set of code standard rules to check for WordPress projects.</description>

	<!-- Exclude the vendor directory from being assessed. -->
	<exclude-pattern>/vendor/*</exclude-pattern>

	<!-- Include the WordPress ruleset, with exclusions for non-security sniffs. -->
	<rule ref="WordPress">
		<!-- Exclude non-security sniffs -->
	</rule>
</ruleset>
